---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import ServiceCard from "@components/service.astro";

const services = [
  {
    title: "UI/UX Design",
    desc: "From wireframes to high-fidelity designs, I craft clean, consistent, and responsive interfaces that align with your brand and convert users.",
    tags: ["Wireframing", "Prototyping", "Design Systems"],
    icon: "palette"
  },
  {
    title: "UX Research",
    desc: "Struggling with bounce rates? I audit with empathy and suggest data-backed improvements to optimize your user journey.",
    tags: ["User Interviews", "Journey Mapping", "Audits"],
    icon: "search"
  },
  {
    title: "Web & App Design",
    desc: "Modern, mobile-first designs for SaaS, iOS, and Android. I design products that look stunning and scale beautifully.",
    tags: ["SaaS", "Mobile Apps", "Landing Pages"],
    icon: "monitor"
  },
  {
    title: "Webflow Dev",
    desc: "Need your designs live? I use Webflow to turn mockups into fully functional, pixel-perfect, and SEO-ready websites.",
    tags: ["Webflow", "No-code", "CMS"],
    icon: "code"
  },
   {
    title: "Visual Strategy",
    desc: "I help define your visual language so every screen feels on-brand, intentional, and cohesive across all touchpoints.",
    tags: ["Brand Identity", "Visual Language", "Moodboards"],
    icon: "eye"
  },
   {
    title: "Consultation",
    desc: "Have a fast-moving project? I slot right in to provide expert guidance and hands-on design support when you need it most.",
    tags: ["Strategy", "Mentorship", "Review"],
    icon: "message-circle"
  }
];
---

<Layout title="Services">
  <section class="min-h-screen pt-32 pb-20 px-4 md:px-16 max-w-7xl mx-auto">
    <div class="mb-24">
      <h1 class="text-6xl md:text-9xl font-serif text-dark opacity-0 animate-[fade-up_1s_ease-out_forwards]">
        My <span class="italic text-coral">Expertise</span>
      </h1>
      <p class="text-xl md:text-2xl font-sans text-dark/60 mt-8 max-w-2xl opacity-0 animate-[fade-up_1s_ease-out_0.3s_forwards]">
        I help focused teams build brands, websites, and products that people actually want to use.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class={`group p-10 bg-white border border-dark/10 rounded-[2rem] hover:border-coral hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 ease-out opacity-0 translate-y-8 service-card flex flex-col justify-between h-96`}>
          <div>
            <div class="w-12 h-12 bg-cream rounded-full flex items-center justify-center mb-8 group-hover:bg-coral group-hover:text-white transition-colors duration-500">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                {service.icon === 'palette' && <path d="M12 21a9 9 0 1 0 0-18c0 3 3 6 9 6z" />}
                {service.icon === 'search' && <><circle cx="11" cy="11" r="8" /><path d="m21 21-4.3-4.3" /></>}
                {service.icon === 'monitor' && <><rect width="20" height="14" x="2" y="3" rx="2" /><line x1="8" x2="16" y1="21" y2="21" /><line x1="12" x2="12" y1="17" y2="21" /></>}
                {service.icon === 'code' && <><polyline points="16 18 22 12 16 6" /><polyline points="8 6 2 12 8 18" /></>}
                {service.icon === 'eye' && <><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0" /><circle cx="12" cy="12" r="3" /></>}
                {service.icon === 'message-circle' && <path d="m3 21 1.9-5.7a8.5 8.5 0 1 1 3.8 3.8z" />}
              </svg>
            </div>
            
            <h3 class="text-3xl font-serif text-dark mb-4">{service.title}</h3>
            <p class="text-dark/60 font-sans leading-relaxed">{service.desc}</p>
          </div>
          
          <div class="flex flex-wrap gap-2 mt-8">
            {service.tags.map(tag => (
              <span class="px-3 py-1 border border-dark/10 rounded-full text-xs uppercase tracking-wider text-dark/50">{tag}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <script>
    document.addEventListener('astro:page-load', () => {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.remove('opacity-0', 'translate-y-8');
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.05
      });
    
      document.querySelectorAll('.service-card').forEach((card, index) => {
        setTimeout(() => {
           observer.observe(card);
        }, index * 100);
      });
    });
  </script>
</Layout>

---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Work",
    path: "/work",
  },
  {
    title: "Services",
    path: "/service",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5 relative z-50">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-2xl font-serif text-dark tracking-tight">
          uiuxwithshree.
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-6 h-6 text-dark" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-8 items-center">
          {
            menuitems.map((item: any, index) => (
              <li>
                <a
                  href={item.path}
                  class="flex py-2 items-center text-dark/60 hover:text-dark font-sans text-sm uppercase tracking-widest transition-colors">
                  <span> {item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="mailto:uiuxwithshree@gmail.com" class="font-sans text-sm uppercase tracking-widest text-dark hover:text-coral transition-colors">Let's Talk</a>
      </div>
    </div>
  </header>
</Container>

<section class="py-20 px-4 md:px-16 max-w-7xl mx-auto">
  <div class="grid md:grid-cols-2 gap-16 items-center">
    <div>
      <h2 class="text-4xl md:text-6xl font-serif text-dark mb-6">
        Design that <br/> <span class="italic text-coral">Works</span>
      </h2>
      <p class="text-lg font-sans text-dark/70 leading-relaxed mb-8">
        I don't just move pixels around. I build digital products that solve real business problems and delight users. From complex dashboards to converting landing pages.
      </p>
      <a href="/service" class="group inline-flex items-center gap-2 font-sans uppercase tracking-widest text-sm border-b border-dark pb-1 hover:text-coral hover:border-coral transition-colors">
        View All Services
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" class="group-hover:translate-x-1 transition-transform stroke-current"><path d="M1 6H11M11 6L6 1M11 6L6 11" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
      </a>
    </div>

    <div class="grid gap-6">
      {[
        { title: "UI/UX Design", desc: "Websites, Apps, Dashboards" },
        { title: "Visual Strategy", desc: "Design Systems, Branding" },
        { title: "Webflow Dev", desc: "High-end development" }
      ].map((item, i) => (
        <div class="border-b border-dark/10 pb-6 group hover:pl-4 transition-all duration-300">
          <h3 class="text-2xl font-serif text-dark mb-1 group-hover:text-coral transition-colors">{item.title}</h3>
          <p class="text-dark/50 font-sans text-sm">{item.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>

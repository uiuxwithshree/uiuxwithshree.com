---
const projects = [
  {
    title: "NGO Fundraising Website",
    category: "Web Design",
    image: "/ngo-thumbnail.png",
    link: "https://www.behance.net/gallery/243051159/Modern-website-for-an-Indian-NGO/modules/1402104831"
  },
  {
    title: "Whatsapp UX Redesign",
    category: "Mobile UX",
    image: "/placeholder.jpg",
    size: "small",
    link: "https://www.loom.com/share/b70f298997a44589a7b0bb1b203f32ed"
  },
  {
    title: "Linear.app redesign",
    category: "Design Practice",
    image: "/linear-thumbnail.png",
    link: "https://www.behance.net/gallery/243048601/Replicated-Linearapp/modules/1402102205"
  },
   {
    title: "Medical Appointment App",
    category: "Product Design",
    image: "/medical-thumbnail.png",
    link: "https://www.behance.net/gallery/243049783/Mobile-App-Design/modules/1402096967"
  },
];
---

<section id="work" class="py-20 px-4 md:px-16 max-w-7xl mx-auto">
  <div class="flex justify-between items-end mb-16">
    <h2 class="text-6xl md:text-8xl text-dark">Selected<br/><span class="italic text-coral">Works</span></h2>
    <span class="hidden md:block text-sm font-sans uppercase tracking-widest text-dark/60 mb-2">2023 â€” Present</span>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-12 gap-y-12 md:gap-x-8">
    {projects.map((project, index) => (
      <div class={`project-card opacity-0 translate-y-8 transition-all duration-1000 ease-out group relative flex flex-col gap-4 md:col-span-6 md:mt-10`}>
        <div class="relative overflow-hidden rounded-[2rem] aspect-[2/1] w-full bg-gray-200">
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-dark/0 group-hover:bg-dark/10 transition-colors duration-500"></div>
        </div>
        
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-2xl md:text-3xl font-serif text-dark">{project.title}</h3>
            <p class="text-sm font-sans uppercase tracking-wider text-dark/60 mt-1">{project.category}</p>
          </div>
          <a href={project.link} target="_blank" class="w-10 h-10 rounded-full border border-dark/20 flex items-center justify-center group-hover:bg-coral group-hover:border-coral group-hover:text-white transition-all duration-300">
            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 11L11 1M11 1H1M11 1V11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </div>
    ))}
  </div>
</section>

<script>
  document.addEventListener('astro:page-load', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.remove('opacity-0', 'translate-y-8');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1
    });

    document.querySelectorAll('.project-card').forEach((card) => {
      observer.observe(card);
    });
  });
</script>
